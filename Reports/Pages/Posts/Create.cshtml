@model Reports.Pages.Posts.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>
<p><a class="nav-link text-blue" asp-area="" asp-page="/SpecialPages/KPIEmployees">Get list done reports and not done report</a></p>
<p><a class="nav-link text-blue" asp-area="" asp-page="/SpecialPages/WeeklyTasks">Get weekly tasks</a></p>
<h4>Post</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Post.CreatorId" class="control-label"></label>
                <input asp-for="Post.CreatorId" class="form-control" />
                <span asp-validation-for="Post.CreatorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Post.TextPost" class="control-label"></label>
                <input asp-for="Post.TextPost" class="form-control" />
                <span asp-validation-for="Post.TextPost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Post.Status" class="control-label"></label>
                <input asp-for="Post.Status" class="form-control" />
                <span asp-validation-for="Post.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
