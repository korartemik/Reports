@page
@model Reports.Pages.Posts.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Reports</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>

<form>
    <p>
        <select asp-for="MovieGenre" asp-items="Model.Genres">
            <option value="">All</option>
        </select>
        Title: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Post[0].CreatorId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Post[0].TextPost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Post[0].DateTimeLastChange)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Post[0].Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Post) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CreatorId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TextPost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateTimeLastChange)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.PostId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.PostId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.PostId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
